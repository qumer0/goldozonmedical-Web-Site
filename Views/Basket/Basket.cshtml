@model List<goldozonmedical_Web_Site.Models.ProductPrice>
@{ Layout= ViewBag.layout;
 }
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sepetiniz</title>
    <link rel="stylesheet" href="~/css/basket.css">
</head>
<body>
    <div class="container">
        <h2>Sepetiniz</h2>
        @if (Model.Count == 0)
        {
            <p>Sepetinizde ürün bulunmamaktadır.</p>
        }
        else
        {
            @foreach (var product in Model)
            {
                <div class="basket-item">
                <div class="basket-image">
                    <img src="@Url.Content(product.ImageUrl)" alt="@product.Name" />
                </div>
                <div class="basket-details">
                    <h4>@product.Name</h4>
                    <p>Fiyat: @product.DiscountedPrice ₺</p>
                <div class="quantity-section">
                    <label for="quantity">Adet: </label>
                    <input type="number" id="quantity" name="quantity" value="1" min="1" max="10" />
                </div>
            <a href="@Url.Action("RemoveFromCart", "Basket", new { id = product.Id })" class="btn btn-danger remove-btn">Ürünü Kaldır</a>
        </div>
    </div>
}

