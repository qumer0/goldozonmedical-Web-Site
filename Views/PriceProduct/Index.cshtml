@model List<goldozonmedical_Web_Site.Models.ProductPrice>

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    
    Layout = "~/Views/Shared/_Layoutafterlogin.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ürünler</title>
    <link rel="stylesheet" href="~/css/products.css">
</head>
<body>
   <div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 d-flex justify-content-center">
                <div class="product-card">
                    <img src="@Url.Content(product.ImageUrl)" alt="@product.Name" class="product-image" />
                    <div class="product-info">
                        <h4 class="product-name">@product.Name</h4>
                        <p class="product-price">Eski Fiyat: <span class="original-price">@product.Price ₺</span></p>
                        <p class="discounted-price">İndirimli Fiyat: <span>@product.DiscountedPrice ₺</span></p>
                        <a href="#" class="btn btn-primary buy-btn">Satın Al</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



</body>
</html>

